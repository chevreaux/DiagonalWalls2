<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- Stone Tiles-->

  <DesignatorDropdownGroupDef>
    <defName>Floor_Tile_Diagonal</defName>
  </DesignatorDropdownGroupDef>

    <ThingDef ParentName="DiagonalFloorBase" Name="DiagonalTileStoneBase" Abstract="True">
    <description>Diagonal stone tiles. They are cheaper and easier to lay. Diagonal tiles do not act as real flooring.</description>
    <statBases>
      <MaxHitPoints>55</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Mass>1</Mass>
      <Flammability>0.0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
    <designatorDropdown>Floor_Tile_Diagonal</designatorDropdown>
      <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
  </ThingDef>  

  <ThingDef ParentName="DiagonalTileStoneBase">
    <defName>DiagonalTileSandstone</defName>
    <label>diagonal sandstone tile</label>
    <graphicData>
      <texPath>DiagonalRim/Floors/StoneTile/SandstoneTile/tile</texPath>
    </graphicData>
            <uiIconPath>DiagonalRim/Floors/StoneTile/SandstoneTile/MenuIcon</uiIconPath>

        <costList>
      <BlocksSandstone>2</BlocksSandstone>
    </costList>
  </ThingDef>  

