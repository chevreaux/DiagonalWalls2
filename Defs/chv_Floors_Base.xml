    <label>soil (hard edge)</label>
    <description>Soil with a hard edge. Will not blend with other flooring.</description>
    <designationCategory>Floors</designationCategory>
    <designatorDropdown>Floor_Hard_Edge</designatorDropdown>
    <texturePath>Terrain/Surfaces/Soil</texturePath>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <layerable>true</layerable>
    <edgeType>Hard</edgeType>
    <renderPrecedence>340</renderPrecedence>
    <pathCost>2</pathCost>
    <statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
      <WorkToBuild>50</WorkToBuild>
      <BeautyOutdoors>0</BeautyOutdoors>
    </statBases>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
    <fertility>1.0</fertility>
    <takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
    <constructEffect>ConstructDirt</constructEffect>
    <placeWorkers>
      <li>chvDiagonalWalls.Placeworker_Fertility100</li> 
    </placeWorkers>
  </TerrainDef>

