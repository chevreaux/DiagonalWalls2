<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="DiagonalFloorBase">
    <defName>DiagonalPavedTile</defName>
    <label>diagonal paved tile</label>
    <description>Diagonal concrete tiles. They are cheaper and easier to lay. Diagonal tiles do not act as real flooring.</description>
    <statBases>
      <WorkToBuild>200</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>DiagonalRim/Floors/PavedTile/tile</texPath>
    </graphicData>
                <uiIconPath>DiagonalRim/Floors/PavedTile/MenuIcon</uiIconPath>

        <costList>
      <Steel>1</Steel>
    </costList>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
  </ThingDef>

